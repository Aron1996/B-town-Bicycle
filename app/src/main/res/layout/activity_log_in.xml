<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.project494.LogIn">

    <EditText
        android:id="@+id/bar_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ConfirmPassord"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="UserName"
        android:inputType="textPersonName"
        android:text="asdf" />

    <Button
        android:id="@+id/Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/haveAccount"
        android:layout_centerHorizontal="true"
        android:background="#F07F5B"
        android:text="Log in" />

    <TextView
        android:id="@+id/haveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="Not Have An Account?"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ConfirmPassord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Register"
        android:layout_alignLeft="@+id/bar_userName"
        android:layout_alignStart="@+id/bar_userName"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:text="asdf" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4"
        android:scaleType="center"
        android:visibility="visible"
        app:srcCompat="@drawable/l" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="150dp"

        android:layout_above="@+id/bar_userName"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/samplegate" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/haveAccount"
        android:layout_alignStart="@+id/haveAccount"
        android:layout_marginBottom="14dp"
        app:srcCompat="@drawable/t" />
</RelativeLayout>


