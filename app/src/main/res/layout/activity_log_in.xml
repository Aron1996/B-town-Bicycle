<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.project494.LogIn"
    android:background="@drawable/background_new">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        />

    <EditText
        android:id="@+id/bar_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ConfirmPassord"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/graylight"
        android:ems="10"
        android:hint="UserName"
        android:inputType="textPersonName"
        android:text="asdf"
        android:textColor="@color/graylight"
        android:textColorHint="@color/graylight" />


    <Button
        android:id="@+id/Register"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/haveAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:background="@drawable/border"
        android:text="Log in"
        android:textColor="@color/graylight" />

    <TextView
        android:id="@+id/haveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Not Have An Account?"
        android:textColor="@color/graylight"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/ConfirmPassord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Register"
        android:layout_alignLeft="@+id/bar_userName"
        android:layout_alignStart="@+id/bar_userName"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/graylight"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:text="asdf"
        android:textColor="@color/graylight"
        android:textColorHint="@color/graylight"/>



</RelativeLayout>


