<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@mipmap/longbeach">


    </android.support.constraint.ConstraintLayout>

    <EditText
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Passcode"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="User Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Passcode"
        android:layout_alignLeft="@+id/UserName"
        android:layout_alignStart="@+id/UserName"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/LogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/NotHaveAnAccount"
        android:layout_centerHorizontal="true"
        android:background="#FF009688"
        android:onClick="OnMainToLoginButton"
        android:text="Register" />

    <TextView
        android:id="@+id/NotHaveAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:onClick="OnMainToLoginTextView"
        android:text="Have An Account?"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/Passcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LogIn"
        android:layout_alignLeft="@+id/Email"
        android:layout_alignStart="@+id/Email"
        android:ems="10"
        android:hint="Passcode"
        android:inputType="textPersonName" />
</RelativeLayout>
